<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="PageHeaderStyle">
        <!-- <item name=""></item>*/ -->
    </style>

    <style name="AppName">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/ts_22sp</item>

    </style>

    <style name="ButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/ts_22sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">@dimen/dim_16dp</item>
        <item name="iconTint">?attr/colorOnSecondary</item>

    </style>

    <style name="MediumButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/ts_14sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">@dimen/dim_54dp</item>
        <item name="iconTint">?attr/colorOnSecondary</item>

        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">@dimen/dim_14dp</item>
    </style>

    <style name="MediumButtonsStyle2" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/ts_14sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">@dimen/dim_54dp</item>
        <item name="iconTint">?attr/colorOnSecondary</item>


    </style>

    <style name="PM2_Header_Image">
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="PM2_Header_Text">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/ts_22sp</item>

    </style>


    <style name="SettingsStyle">
        <item name="android:textSize">@dimen/ts_16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:drawableTint">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/pixeloid_sans</item>
    </style>

    <style name="ThemeSwitch">

        <item name="android:textSize">@dimen/ts_16sp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="thumbTint">@color/greyLight</item>
        <item name="trackTint">@color/bluegreen</item>
        <item name="android:drawableTint">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/pixeloid_sans</item>
    </style>


    <!--    PLAYER_ACTIVITIES-->
    <style name="Player_H2Text" parent="PM2_Header_Text">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Player_H3Text">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="Player_SongDescription">

        <item name="android:textSize">@dimen/ts_13sp</item>
    </style>

    <style name="Player_SongDescription_Left" parent="Player_SongDescription">
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_marginTop">@dimen/dim_16dp</item>
    </style>

    <style name="Player_SongDescription_Right" parent="Player_SongDescription">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end</item>
        <item name="layout_constraintWidth_max">200dp</item>
    </style>

    <style name="corner_radius">
        <item name="cornerRadius">@dimen/dim_54dp</item>/>
    </style>
    >

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">

        <item name="android:textSize">14sp</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
    </style>

    <style name="InfoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="CustomTabTextAppearance" parent="Theme.SpanishWords">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/ts_14sp</item>

    </style>

    <style name="test">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">62sp</item>

    </style>

    <style name="Header" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/pixeloid_sans_bold</item>
    </style>

    <style name="Header_ver2" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/ts_22sp</item>
        <item name="android:fontFamily">@font/pixeloid_sans_bold</item>

    </style>

    <style name="Words">
        <item name="android:textSize">@dimen/ts_14sp</item>
        <item name="android:fontFamily">@font/pixeloid_mono</item>
        <item name="android:textAllCaps">false</item>
        <item name="singleLine">false</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:paddingHorizontal">@dimen/padding_small</item>
    </style>

    <style name="Stats">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/pixeloid_sans_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#E6E8EB</item>
    </style>
</resources>