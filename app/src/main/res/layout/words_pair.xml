<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="?attr/colorOnPrimary"
    android:layout_marginTop="@dimen/padding_small"
    >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bOrigin"
        style="@style/Words"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginEnd="@dimen/padding_small"
        android:background="@drawable/word_background_default"
        app:layout_constraintEnd_toStartOf="@id/bTranslate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="умный" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bTranslate"
        style="@style/Words"
        android:layout_width="0dp"
        android:layout_height="68dp"
        tools:text="intelligente"
        android:layout_marginStart="@dimen/padding_small"
        android:background="@drawable/word_background_default"
        app:layout_constraintTop_toTopOf="@id/bOrigin"
        app:layout_constraintStart_toEndOf="@id/bOrigin"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
